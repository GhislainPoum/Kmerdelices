<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".login.Connexion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/cuier" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="K'mer"
                android:textColor="@color/blue"
                android:textSize="35dp" />
            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delices"
                android:textColor="@color/orang"
                android:textSize="35dp" />



        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="97dp"
            android:text="DELICES FOR ALL"
            android:textColor="@color/oran"
            android:textSize="13dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:gravity="center"
        android:background="@drawable/rounder2"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/conx_faceb"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:background="@drawable/rounder">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                app:srcCompat="@drawable/facebook" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/facebook_connexion"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:layout_toEndOf="@+id/imageView3"
                android:layout_toRightOf="@+id/imageView3" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="55dp"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:background="@drawable/rounder">

            <ImageView

                android:id="@+id/imageView2"
                android:layout_width="80dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/imggoogle"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-15dp"
                android:layout_toEndOf="@+id/imageView2"
                android:text="@string/google_connexion"
                android:textColor="@color/black" />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>